<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/user_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <PreferenceCategory android:title="Settings">
        <EditTextPreference
            android:title="API URL"
            android:summary="URL for accessing the API"
            android:defaultValue="http://keg.nektos.com/api/authorization"
            android:key="prefApiUrl"/>
        <EditTextPreference
            android:title="API Key"
            android:summary="Key for accessing the API"
            android:key="prefApiKey"/>
    </PreferenceCategory>
</PreferenceScreen>